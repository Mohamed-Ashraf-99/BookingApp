{
  "ConnectionStrings": {
    "RestaurantsDb": "Data Source=.;Initial Catalog=BookingDb;Integrated Security=True;Encrypt=False"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Restaurant-API-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "jwtSettings": {
    "secret": "zG9s8Nh5dE2v+3j9lFq9lQ==ZFZwA6HzaxMzdX/4WlLXg6HdjaCUIIrONyJqF8Gmfjk=",
    "issure": "BookingProject",
    "audience": "BookingProjectAudience",
    "validateAudience": true,
    "validateIssuer": true,
    "validateLifetime": true,
    "validateIssuerSigninKey": true,
  }
}
